<?xml version="1.0" encoding="utf-8"?>
<com.example.mynestedscrollingdemo.view.NestedScrollViewDispatchEvent xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Hello World!"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="#9aa1ab"
        app:is_head_view="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_scroll_view="true"/>

</com.example.mynestedscrollingdemo.view.NestedScrollViewDispatchEvent>